@model ToDoList.Models.ToDo

@{
    ViewBag.Title = "My To Do List";
}


<h2 class="text-center"> My To Do List</h2>

<div id="tableDiv"></div>



<div id="CreateFromTodo">
    @using (Ajax.BeginForm("AjaxCreate", "ToDoes", new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "POST",
        UpdateTargetId = "tableDiv"
    }))
    {
        <div class="form-group">
            @Html.AntiForgeryToken()
            <div>
                @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Add new element here!. Enter to sumbit" } })
                @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
            </div>
        </div>
    }

</div>

@section Scripts {
     <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
     <script src="~/MyScripts/BuildTable.js"></script>
    @Scripts.Render("~/bundles/jqueryval") 
}
